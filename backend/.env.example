# ===========================
# Application Configuration
# ===========================
NODE_ENV=development
PORT=5000

# ===========================
# MongoDB Configuration
# ===========================
# For Docker Compose (uses service name 'mongo')
MONGO_URI=mongodb://admin:password@mongo:27017/fleetiva?authSource=admin

# For local development without Docker
# MONGO_URI=mongodb://localhost:27017/fleetiva
# Or MongoDB Atlas:
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# ===========================
# Redis Configuration
# ===========================
# For Docker Compose (uses service name 'redis')
REDIS_URL=redis://:redispassword@redis:6379

# For local development without Docker
# REDIS_URL=redis://localhost:6379

# ===========================
# JWT Configuration
# ===========================
ACCESS_TOKEN_SECRET=change_me_to_a_secure_secret
REFRESH_TOKEN_SECRET=change_me_to_another_secure_secret
ACCESS_TOKEN_TTL=7d

# ===========================
# Frontend Configuration
# ===========================
FRONTEND_URL=http://localhost:5173
FRONTEND_PREVIEW_URL=
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
VERCEL_PREVIEW_SUFFIX=.vercel.app

# ===========================
# Business Configuration
# ===========================
FREIGHT_RATE_PER_TON=1000
OTP_TTL_SECONDS=600

# ===========================
# Twilio Configuration (Optional)
# ===========================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ===========================
# Firebase Configuration (Optional)
# ===========================
# Set to 'true' to skip Firebase initialization
SKIP_FIREBASE=true

# If using Firebase, provide these credentials:
FIREBASE_SERVICE_ACCOUNT=
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ===========================
# Database Skip Options
# ===========================
# Set to 'true' to skip MongoDB initialization (not recommended)
SKIP_MONGO=false

# ===========================
# MongoDB Memory Server (for testing)
# ===========================
MONGOMS_VERSION=7.0.14
MONGOMS_DISTRO=ubuntu-22.04
