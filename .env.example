# ===========================
# Application Configuration
# ===========================
NODE_ENV=development
PORT=5000

# ===========================
# MongoDB Configuration
# ===========================
# For Docker Compose (uses service name 'mongo')
MONGO_URI=mongodb://admin:password@mongo:27017/fleetiva?authSource=admin

# MongoDB Root Credentials (used by Docker Compose)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=fleetiva

# For local development without Docker (optional)
# MONGO_URI=mongodb://localhost:27017/fleetiva

# ===========================
# Redis Configuration
# ===========================
# For Docker Compose (uses service name 'redis')
REDIS_URL=redis://:redispassword@redis:6379

# Redis Password (used by Docker Compose)
REDIS_PASSWORD=redispassword

# For local development without Docker (optional)
# REDIS_URL=redis://localhost:6379

# ===========================
# JWT Configuration
# ===========================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ===========================
# Frontend Configuration
# ===========================
FRONTEND_URL=http://localhost:5173
FRONTEND_PREVIEW_URL=
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
VERCEL_PREVIEW_SUFFIX=

# ===========================
# Firebase Configuration (Optional)
# ===========================
# Set to 'true' to skip Firebase initialization
SKIP_FIREBASE=true

# If using Firebase, provide these credentials:
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ===========================
# Twilio Configuration (Optional)
# ===========================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# ===========================
# Database Skip Options
# ===========================
# Set to 'true' to skip MongoDB initialization (not recommended)
SKIP_MONGO=false
